<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <%= label f, "Monto"%>
  <%= number_input f,:saldo %>

  <%= label f, :no_cta %>
  <%= number_input f, :no_cta %>
  <%= error_tag f, :no_cta %>
  
  <div>
    <%= submit "Retiro" %>
    <%= submit "Deposito" %>
  </div>
<% end %>
