<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <%= label f,:saldo %>
  <%= @cuenta.saldo  %>
  <%= label f, "Monto"%>
  <%= number_input f,:monto %>
  <div>
    <%= submit "Retiro" %>
    <%= submit "Deposito" %>
  </div>
<% end %>